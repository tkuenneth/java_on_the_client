<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thomaskuenneth.webstartapp.FXMLDocumentController">
   <children>
      <VBox alignment="CENTER" fillWidth="false">
         <children>
              <Button fx:id="button" onAction="#handleButtonAction" text="Click Me!" />
              <Label fx:id="label" alignment="CENTER" contentDisplay="TOP" minHeight="16" minWidth="69" text="placeholder" />
            <Hyperlink fx:id="link" onAction="#handleHyperlinkAction" text="https://openjdk.java.net/">
               <VBox.margin>
                  <Insets top="32.0" />
               </VBox.margin>
            </Hyperlink>
         </children>
      </VBox>
   </children>
</FlowPane>
